<!-- CSS -->
<style>.current-page-account { font-weight: 900; }</style>

<!-- HEADER: Bindet den "header"-Partial in die aktuelle Vorlage ein. -->
{{> header}}

<div class="form-complete">
  <!-- TITEL -->
  <h1>Edit Account</h1>

  <!-- FORMULAR -->
  <form action="/update-account" enctype="multipart/form-data" method="post">
    <label>Username</label>
    <input type="text" name="username" value="{{users.username}}"/>

    <label>Password</label>
    <input type="password" name="password" value="{{users.password}}"/>

    <label>E-Mail</label>
    <input type="email" name="email" value="{{users.email}}"/>

    <!-- HIDDEN INPUT -->
    <input type="hidden" name="id" value="{{users.id}}">

    <button class="solid" type="submit">→ UPDATE</button>
  </form>

  <!-- RETURN -->
  <button><a href="/account">← RETURN</a></button>

  <!-- DELETE ACCOUNT -->
  <a href="/delete-account/{{users.id}}">DELETE ACCOUNT</a>
</div>

<!-- HINTERGRUNDBILD -->
<img class="intro-image" src="background-image-login-register-account-1440x1024.jpg" alt="Hintergrundbild mit grossem Berg"></div>

